{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "fs:default",
    "fs:allow-read-dir",
    "fs:allow-read-text-file",
    "fs:allow-app-write",
    "fs:allow-app-write-recursive",
    {
      "identifier": "fs:allow-app-write",
      "allow": [{"path": "$HOME/**/*"}, {"path": "$HOME"}]
    }
  ]
}
